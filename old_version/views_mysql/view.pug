doctype html
html
    head
        meta(charset='utf-8')
    body
        include header.pug
        
        ul
            each _topic in topics
                li
                    a(href=`/topic/${_topic.id}`)=_topic.title

        article
            if topic 
                h2=topic.title
                =topic.description
                br
                br
                div=`by ${topic.author}`
            else
                h2 Welcome
                | This is topic homepage
        div
            a(href='/topic/new') new